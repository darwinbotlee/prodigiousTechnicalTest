@model IEnumerable<ClientMVC.Models.Product>

@{
    ViewBag.Title = "List of Products";
}
<h2>@ViewBag.Title.</h2>
<div>
    <h3>@Html.ActionLink("Create New Product", "Create") </h3>
</div>

@if (Model != null)
{
    <table id="products" class="display hover dataTable no-footer">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.ActionLink("View Details", "Details", new { id = item.ProductID }) &nbsp;
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductID })
                </td>
            </tr>
        }
    </table>
    <script>
    $(document).ready(function () {
        $('#products').DataTable();
    });
    </script>
}
else {
   <p> no data</p>
}




